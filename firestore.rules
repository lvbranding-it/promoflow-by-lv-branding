rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // A user must be authenticated to access any document in the database.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // This rule is more specific and overrides the one above for the customers collection.
    // It ensures a user can only read and write their OWN documents.
    match /customers/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
